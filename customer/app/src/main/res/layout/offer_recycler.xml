<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/offer_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/vendor_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                    <TextView
                        android:id="@+id/offer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingLeft="5dp"
                        android:textColor="@color/blackcolor"
                        android:textSize="16sp"
                        android:textStyle="bold" />




                <TextView
                    android:id="@+id/offer_minamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/blackcolor" />
                <TextView
                    android:id="@+id/offer_maxdiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/blackcolor" />

                <TextView
                    android:id="@+id/offer_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5dp"

                    android:textColor="@color/blackcolor" />

                <TextView
                    android:id="@+id/offer_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:textColor="@color/blackcolor"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/offer_offer"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="6dp"

        android:background="@drawable/rounded_offer_button"
        android:textColor="@color/whitecolor"
        />
</android.support.v7.widget.CardView>