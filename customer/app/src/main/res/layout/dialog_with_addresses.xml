    <TextView
        android:id="@+id/dialog_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text="Address :"
        android:textStyle="bold"
        android:layout_gravity="left" />
    <TextView
        android:id="@+id/dialog_address_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/dialog_address_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/dialog_address_landmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/dialog_address_locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text=""
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/dialog_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/black_color"
        android:text=""
        android:layout_gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/dialog_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:textColor="@color/white_color"
            android:text="Edit" />

        <Button
            android:id="@+id/dialog_continue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/primary"
            android:textColor="@color/white_color"
            android:text="Continue" />
    </LinearLayout>
</LinearLayout>