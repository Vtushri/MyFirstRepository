<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zetagile.foodcart.withoutimageslayouts.NoneHomeLayoutFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/none_home_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="Frequently Ordered"
            android:textColor="@color/whitecolor"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp">

            <TextView
                android:id="@+id/none_showall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:background="@color/accent"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Show all"
                android:textColor="@color/whitecolor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/none_main_recycle"
      />

</LinearLayout>
