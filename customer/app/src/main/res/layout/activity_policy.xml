<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    tools:context="com.zetagile.foodcart.PolicyActivity">
    <TextView
        android:id="@+id/policy_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/policy_heading"
        android:textSize="18sp"
        android:gravity="center"
	 android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blackcolor" />
    <TextView
        android:id="@+id/policy_para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/terms_condition_Paragraph"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/policy_link1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <TextView
        android:id="@+id/policy_link2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <TextView
        android:id="@+id/policy_link3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

</LinearLayout>
